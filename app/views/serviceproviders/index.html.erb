<% provide(:title, "Providers") %>
<p id="notice"><%= notice %></p>

<h2>Service Providers</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Company Alias</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Contactperson</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @serviceproviders.each do |serviceprovider| %>
      <tr>
        <td><%= serviceprovider.name %></td>
        <td><%= serviceprovider.companyalias %></td>
        <td><%= serviceprovider.address %></td>
        <td><%= serviceprovider.email %></td>
        <td><%= serviceprovider.phone %></td>
        <td><%= serviceprovider.contactperson %></td>
        <td><%= link_to 'View', serviceprovider %></td>
        <% if current_user.admin == true %>
        <td><%= link_to 'Edit', edit_serviceprovider_path(serviceprovider) %></td>
        <td><%= link_to 'Delete', serviceprovider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<hr/>
<% if current_user.admin == true %>
<%= link_to 'New Service Provider', new_serviceprovider_path %><br/>
<% end %>
<%= link_to 'Dashboard', dashboard_index_path %>