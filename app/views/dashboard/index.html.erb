        <h2><%= link_to "Your Account is not yet active or is on hold. Please Contact your corporate account administrator
        for more information. ", dashboard_index_url %></h2>
      <% end %>
        </ul>

      </div>
    <hr />
  </div>

<% end %>

<hr/>

<div class = "dashboardcontent">
  <%=render 'dashboard/post'%>
</div>