  <% else %>
    <strong><p class="alert">[[i]] Non-Admin</p></strong>
  <% end %>
  <hr />
  <div class = "horizontal-menu">
    <ul>
      <li><%= link_to "Open Cases", medevaccases_dispatcheropencases_path %></li>
      <li><%= link_to "Closed Cases", medevaccases_dispatcherclosedcases_path %></li>
      <li><%= link_to "Medevac Cases [All]", medevaccases_dispatcherindex_url %></li>
      <li><%= link_to "CaseMails", all_conversations_path %></li>
