        <li><%= link_to "Hospitals", hospitals_path %></li>
        <li><%= link_to "Service Providers", serviceproviders_path %></li>
        <li><%= link_to "Insurers", insurers_path %></li>
      <% end %>
    </ul>
  </div>
<% else %>
  <h2>My Dashboard</h2>
  <hr />

    <div>

    <hr />
      <% if current_user.vetted == true %>
      <div class = "horizontal-menu">
        <ul>
          <li><%= link_to "Open NewCase", new_medevaccase_path %></li>
