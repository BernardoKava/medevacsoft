          <li><%= link_to "Insurers", insurers_path %></li>
          <li><%= link_to "Locate", locates_path %></li>
          <% if current_user.clientadmin == true %>
            <li><%= link_to "Management View", medevaccases_distribution_path %></li>
          <% end %>
