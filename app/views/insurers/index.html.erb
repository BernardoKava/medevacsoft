<p id="notice"><%= notice %></p>

<h2>Insurers</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Companyalias</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Contactperson</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @insurers.each do |insurer| %>
      <tr>
        <td><%= insurer.name %></td>
        <td><%= insurer.companyalias %></td>
        <td><%= insurer.address %></td>
        <td><%= insurer.email %></td>
        <td><%= insurer.phone %></td>
        <td><%= insurer.contactperson %></td>
        <td><%= link_to 'View', insurer %></td>
        <% if current_user.admin == true %>
        <td><%= link_to 'Edit', edit_insurer_path(insurer) %></td>
        <td><%= link_to 'Delete', insurer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<hr/>
<% if current_user.admin == true %>
<%= link_to 'New Insurer', new_insurer_path %><br/>
<% end %>
